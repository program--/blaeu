{
  "compilerOptions": {
    "target": "esnext",
    "module": "es6",
    "esModuleInterop": true,
    "lib": [
      "dom",
      "es2015",
      "es6",
      "es5"
    ],
    "sourceMap": true,
    "outDir": "public",
    "downlevelIteration": true,
    "allowJs": true,
    "baseUrl": "./lib/",
    "moduleResolution": "Node",
    "experimentalDecorators": true,
  },
  "include": [
    "lib/**/*.ts"
  ]
}